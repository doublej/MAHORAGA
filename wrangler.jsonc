{
  "$schema": "https://raw.githubusercontent.com/cloudflare/workers-sdk/main/packages/wrangler/config-schema.json",
  "name": "mahoraga",
  "main": "src/index.ts",
  "compatibility_date": "2024-12-01",
  "compatibility_flags": ["nodejs_compat"],
  "account_id": "015478e13d7ca9d81172aafcf5f199b6",

  "vars": {
    "ENVIRONMENT": "production",
    "FEATURE_LLM_RESEARCH": "true",
    "FEATURE_OPTIONS": "true",
    "DEFAULT_MAX_POSITION_PCT": "0.15",
    "DEFAULT_MAX_NOTIONAL_PER_TRADE": "10000",
    "DEFAULT_MAX_DAILY_LOSS_PCT": "0.03",
    "DEFAULT_COOLDOWN_MINUTES": "30",
    "DEFAULT_MAX_OPEN_POSITIONS": "10",
    "DEFAULT_APPROVAL_TTL_SECONDS": "300"
  },

  // Secrets (set via `wrangler secret put <NAME>`):
  // Required:
  // - ALPACA_API_KEY
  // - ALPACA_API_SECRET
  // - KILL_SWITCH_SECRET (emergency kill switch + approval token signing)
  // Authentication (configure one or both):
  // - MAHORAGA_API_TOKEN (bearer auth - generate with: openssl rand -base64 48)
  // - CLOUDFLARE_ACCESS_AUD (Cloudflare Access JWT audience claim)
  // Optional:
  // - OPENAI_API_KEY (for LLM features)
  // - ALPACA_PAPER ("true" for paper trading)
  // - TWITTER_BEARER_TOKEN
  // - DISCORD_WEBHOOK_URL

  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "mahoraga-db",
      "database_id": "51384f0b-c1a9-4d24-8d56-b06db35b3d14",
      "migrations_dir": "migrations"
    }
  ],

  "kv_namespaces": [
    {
      "binding": "CACHE",
      "id": "0036a4af9f9c4f5fa68e06927d11f092"
    }
  ],

  "durable_objects": {
    "bindings": [
      {
        "name": "SESSION",
        "class_name": "SessionDO"
      },
      {
        "name": "MCP_AGENT",
        "class_name": "MahoragaMcpAgent"
      },
      {
        "name": "MAHORAGA_HARNESS",
        "class_name": "MahoragaHarness"
      }
    ]
  },

  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["SessionDO", "MahoragaMcpAgent", "MahoragaHarness"]
    }
  ],

  "triggers": {
    "crons": [
      "*/5 13-20 * * 1-5",
      "0 14 * * 1-5",
      "30 21 * * 1-5",
      "0 5 * * *",
      "0 * * * *"
    ]
  },

  "assets": {
    "directory": "dashboard/build",
    "binding": "ASSETS",
    "html_handling": "drop-trailing-slash",
    "not_found_handling": "single-page-application"
  },

  "build": {
    "command": "cd dashboard && npm run build"
  },

  "placement": {
    "mode": "smart"
  },

  "dev": {
    "port": 8787
  }
}
